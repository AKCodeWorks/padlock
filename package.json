{
	"name": "@akcodeworks/padlock",
	"version": "0.0.2",
	"license": "MIT",
	"author": "AKCodeWorks",
	"publishConfig": {
		"access": "public"
	},
	"description": "A simple OAuth2 provider for SvelteKit",
	"repository": {
		"type": "git",
		"url": "https://github.com/akcodeworks/padlock.git"
	},
	"scripts": {
		"dev": "bun --bun vite dev",
		"build": "bun --bun vite build && npm run prepack",
		"preview": "bun --bun vite preview",
		"prepare": "bun --bun svelte-kit sync || echo ''",
		"prepack": "bun --bun svelte-kit sync && svelte-package && publint",
		"pack:clean": "rm -rf dist ./*.tgz && bun run prepack && npm pack",
		"check": "bun --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "bun --bun prettier --check . && eslint .",
		"format": "bun --bun prettier --write .",
		"test:unit": "bun --bun vitest",
		"test": "bun --bun bun run test:unit -- --run"
	},
	"files": [
		"dist",
		"!dist/assets/**",
		"!dist/dev/**",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./client": {
			"types": "./dist/client.d.ts",
			"svelte": "./dist/client.js",
			"import": "./dist/client.js",
			"default": "./dist/client.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^22",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.15",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"authentication",
		"authorization",
		"oauth",
		"oauth2",
		"pkce",
		"jwt",
		"identity",
		"auth",
		"security"
	],
	"dependencies": {
		"jsdom": "^27.4.0",
		"jsonwebtoken": "^9.0.3"
	}
}